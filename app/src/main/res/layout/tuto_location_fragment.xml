<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studentnetwork.android.com.studentnetwork.activity.tuto.TutoLocationFragment">

    <TextView
        android:id="@+id/city_text_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/put_city_text"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/city_icn"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/my_city300"
        android:layout_below="@id/city_text_pager"
        android:layout_margin="5dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/city_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_icn"
        android:alpha="0.5"
        android:layout_margin="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:textColorHint="@color/colorPrimaryBlue"
        app:errorEnabled="true"
        >

        <fragment
            android:id="@+id/city_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/city"
            android:inputType="textAutoComplete"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
